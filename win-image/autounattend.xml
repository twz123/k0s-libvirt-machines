<?xml version="1.0" encoding="utf-8"?>
<unattend xmlns="urn:schemas-microsoft-com:unattend"
  xmlns:wcm="http://schemas.microsoft.com/WMIConfig/2002/State"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!--
    WINDOWS PE PASS: This runs before installation proper. Accept the license,
    wipe Disk 0, create EFI/MSR/Primary partitions, and tell Setup to install
    image index 1 into the Primary partition.
   -->
  <settings pass="windowsPE">
    <!-- Language for WinPE phase -->
    <component name="Microsoft-Windows-International-Core-WinPE"
      processorArchitecture="amd64" publicKeyToken="31bf3856ad364e35"
      language="neutral" versionScope="nonSxS">
      <InputLocale>en-US</InputLocale>
      <SystemLocale>en-US</SystemLocale>
      <UILanguage>en-US</UILanguage>
      <UserLocale>en-US</UserLocale>
    </component>

    <component name="Microsoft-Windows-Setup"
      processorArchitecture="amd64" publicKeyToken="31bf3856ad364e35"
      language="neutral" versionScope="nonSxS">

      <!-- Accept the EULA without prompting -->
      <UserData>
        <AcceptEula>true</AcceptEula>
      </UserData>

      <DiskConfiguration>
        <Disk wcm:action="add" wcm:keyValue="0">
          <DiskID>0</DiskID>
          <WillWipeDisk>true</WillWipeDisk>

          <!-- GPT layout: ESP (260 MB), MSR (16 MB), Primary (rest) -->
          <CreatePartitions>
            <!-- EFI system partition -->
            <CreatePartition wcm:action="add">
              <Order>1</Order>
              <Type>EFI</Type>
              <Size>256</Size>
            </CreatePartition>
            <!-- Microsoft reserved partition -->
            <CreatePartition wcm:action="add">
              <Order>2</Order>
              <Type>MSR</Type>
              <Size>16</Size>
            </CreatePartition>
            <!-- Main Windows partition (fills the rest of the disk) -->
            <CreatePartition wcm:action="add">
              <Order>3</Order>
              <Type>Primary</Type>
              <Extend>true</Extend>
            </CreatePartition>
          </CreatePartitions>

          <!-- Format the partitions -->
          <ModifyPartitions>
            <!-- EFI partition -->
            <ModifyPartition wcm:action="add">
              <Order>1</Order>
              <PartitionID>1</PartitionID>
              <Label>System</Label>
              <Format>FAT32</Format>
            </ModifyPartition>
            <!-- MSR needs no formatting -->
            <ModifyPartition wcm:action="add">
              <Order>2</Order>
              <PartitionID>2</PartitionID>
            </ModifyPartition>
            <!-- Windows partition -->
            <ModifyPartition wcm:action="add">
              <Order>3</Order>
              <PartitionID>3</PartitionID>
              <Label>Windows</Label>
              <Format>NTFS</Format>
              <Letter>C</Letter>
            </ModifyPartition>
          </ModifyPartitions>
        </Disk>
      </DiskConfiguration>

      <!-- Install the OS image -->
      <ImageInstall>
        <OSImage>
          <InstallTo>
            <!-- Target is disk 0, partition 3 (the Primary) -->
            <DiskID>0</DiskID>
            <PartitionID>3</PartitionID>
          </InstallTo>
          <InstallFrom>
            <MetaData wcm:action="add">
              <Key>/IMAGE/NAME</Key>
              <!--
                sudo mount -t udf -o loop <path-to-iso> /mnt/iso
                wimlib-imagex info /mnt/iso/sources/install.wim
               -->
              <Value>Windows Server 2025 SERVERSTANDARDCORE</Value>
            </MetaData>
          </InstallFrom>
          <WillShowUI>OnError</WillShowUI>
        </OSImage>
      </ImageInstall>
    </component>

    <component name="Microsoft-Windows-PnpCustomizationsWinPE" publicKeyToken="31bf3856ad364e35"
      language="neutral" versionScope="nonSxS" processorArchitecture="amd64"
      xmlns:wcm="http://schemas.microsoft.com/WMIConfig/2002/State"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

      <!-- Check installed drivers with: dism /online /Get-Drivers /Format:Table -->
